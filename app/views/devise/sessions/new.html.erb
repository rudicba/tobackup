<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="span4 offset4 well">
        <legend>Sign In</legend>

        <%= bootstrap_flash %>

        <%= f.text_field :login, :class => "span4", :placeholder => "Username", :autofocus => true %>
        <%= f.password_field :password, :class => "span4", :placeholder => "Password" %>
        <% if devise_mapping.rememberable? -%>
          <div>
          	<%= f.check_box :remember_me %> 
          	<%= f.label :remember_me, :class => "checkbox inline" %>
          </div>
        <% end -%>
		</br>
        <%= f.submit "Sign in", :class => "btn btn-info btn-block " %>
      </div>
    </div>
  </div> 
<% end %>

