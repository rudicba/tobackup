<%= form_for @host, :html => { :class => 'form-horizontal' } do |f| %>
    <legend><%= controller.action_name.capitalize %> Host</legend>
   
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field', :placeholder => "Name of host" %>
      </div>
    </div>
   
    <div class="control-group">
      <%= f.label :ip, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :ip, :class => 'text_field', :readonly => true, :placeholder => "Self detected" %>
      </div>
    </div>
  
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', hosts_path, :class => 'btn' %>
    </div>
<% end %>