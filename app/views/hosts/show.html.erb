<legend><%=t '.title', :default => Host.model_name.human.titleize %></legend>

<dl class="dl-horizontal">
  <dt><strong><%= Host.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @host.name %></dd>
  <dt><strong><%= Host.human_attribute_name(:ip) %>:</strong></dt>
  <dd><%= @host.ip.empty? ? "Empty" : @host.ip %></dd>
  <dt><strong><%= Host.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @host.status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hosts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_host_path(@host), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              host_path(@host),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
