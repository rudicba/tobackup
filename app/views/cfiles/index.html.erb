<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Path</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% unless @cfiles.empty? %>
	    <% @cfiles.each do |cfile| %>
	      <tr>
	        <td><%= cfile.path %></td>
          <td><%= cfile.date %></td>
	        <td>
	          <%= link_to t('.download', :default => t("Download")),
	                        backup_cfiles_path(cfile), :class => 'btn btn-mini', :method => :get %>
	        </td>
	      </tr>
	    <% end %>
    <% else %>
	    <tr>
	      <td colspan="2">Nothing to see here...</td>
	    </tr>
  	<% end %>
  </tbody>
</table>
