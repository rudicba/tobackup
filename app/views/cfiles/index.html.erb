<legend><%= @backup.host.name %>: <%= @backup.path %> </legend>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Size</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% unless @cfiles.empty? %>
	    <% @cfiles.each do |cfile| %>
	      <tr>
	      	<td><%= cfile.date %></td>
          	<td><%= cfile.size %></td>
	        <td>
	          <%= link_to t('.download', :default => t("Download")),
	                        download_backup_cfile_path(@backup, cfile), :class => 'btn btn-mini', :method => :patch %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                       cfile_path(cfile	),
	                       :method => :delete,
	                       :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                                                  :default => 'Are you sure?')) },
	                       :class => 'btn btn-mini btn-danger' %>
	        </td>
	      </tr>
	    <% end %>
    <% else %>
	    <tr>
	      <td colspan="3">Nothing to see here...</td>
	    </tr>
  	<% end %>
  </tbody>
</table>
